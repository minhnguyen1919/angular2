section.lastest-wrapper
  h3.headline
    span Latest
  product-list([limit]="limitItemPerRow")
  p.read-more
    a([routerLink]="['/products']") All products

section.categories-wrapper
  h3.headline
    span Categories
  .row.categories
    .col-sm-12.col-md-4.category
      a([routerLink]="['/products']", [queryParams]="{type: 'Watches'}")
        img(src="http://demo.harnishdesign.net/opencart/bigshop/v2/image/cache/catalog/demo/banners/watches-360x200.jpg", alt="watches category")
    .col-sm-12.col-md-4.category
      a([routerLink]="['/products']", [queryParams]="{type: 'Jacket'}")
        img(src="http://demo.harnishdesign.net/opencart/bigshop/v2/image/cache/catalog/demo/banners/jackets-360x200.jpg", alt="jackets category")
    .col-sm-12.col-md-4.category
      a([routerLink]="['/products']", [queryParams]="{type: 'Shoes'}")
        img(src="http://demo.harnishdesign.net/opencart/bigshop/v2/image/cache/catalog/demo/banners/shoes-360x200.jpg", alt="shoes category")

section.bestseller-wrapper
  h3.headline
    span Bestsellers
  product-list([sort]="'quantity'", [order]="'DESC'", [limit]="limitItemPerRow")
