div.text-left
  form.col-md-offset-4
    div.form-group
      label(for="Username") Username
      input#username.form-control(type="text")
    div.form-group
      label(for="first-name") First Name
      input#first-name.form-control(type="text")
    div.form-group
      label(for="last-name") Last Name
      input#last-name.form-control(type="text")
    div.form-group
      label Gender
      div.col-md-offset-2
        label.radio-inline
          input(type="radio", name="gender", checked, value="male")
          | Male
        label.radio-inline
          input#gender(type="radio", name="gender", value="female")
          | Female

    div.form-inline.row
      label Date of birth
      div.col-md-offset-2
        .form-group.col-sm-4
          select.form-control
            option 12
            option 13
            option 14
        .form-group.col-sm-4
          select.form-control
            option 10
            option 11
            option 12
        .form-group.col-sm-4
          select.form-control
            option 1990
            option 1991
            option 1992

    div.form-group
      label(for="email") Email
      input.form-control(type="text")

